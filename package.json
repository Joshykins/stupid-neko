{
	"name": "stupid-neko",
	"description": "stupid-neko â€” Japanese learning and progress tracking app",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.15.0",
	"scripts": {
		"dev": "turbo run dev",
		"auth:keys": "node ./scripts/generate-auth-keys.mjs",
		"dev:all": "turbo run dev --filter=...",
		"dev:web": "turbo run dev --filter=web",
		"dev:mobile": "turbo run dev --filter=mobile",
		"dev:extension": "turbo run dev --filter=browser-extension",
		"dev:backend": "convex dev --local --once",
		"pull-env:dev": "tsx scripts/pull-env.ts dev",
		"pull-env:prod": "tsx scripts/pull-env.ts production",
		"predev": "node scripts/check-pnpm.js",
		"predev:web": "node scripts/check-pnpm.js",
		"predev:backend": "node scripts/check-pnpm.js",
		"predev:mobile": "node scripts/check-pnpm.js",
		"build": "turbo run build",
		"prebuild": "node scripts/check-pnpm.js",
		"start": "turbo run start",
		"build:extension": "turbo run build --filter=browser-extension",
		"prestart": "node scripts/check-pnpm.js",
		"lint": "turbo run lint",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"deploy:convex:dev": "npx convex deploy --cmd 'pnpm build' --cmd-url-env-var-name CONVEX_URL",
		"deploy:convex:prod": "npx convex deploy --cmd 'pnpm build' --cmd-url-env-var-name CONVEX_URL --prod",
		"prelint": "node scripts/check-pnpm.js",
		"preinstall": "node -e \"if (!process.env.npm_execpath || !/pnpm/.test(process.env.npm_execpath)) { console.error('This repository uses pnpm. Please use pnpm to install and run scripts.'); process.exit(1); }\""
	},
	"dependencies": {
		"@auth/core": "^0.37.4",
		"@convex-dev/auth": "^0.0.88",
		"@google/genai": "^1.25.0",
		"@hono/zod-validator": "^0.7.2",
		"chalk": "^5.3.0",
		"convex": "^1.28.0",
		"convex-helpers": "^0.1.104",
		"hono": "^4.9.6",
		"lucide-react": "^0.468.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@stupid-neko/eslint": "workspace:*",
		"@types/node": "^20.19.11",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.0",
		"tsx": "^4.19.2",
		"turbo": "^2.5.6",
		"typescript": "catalog:"
	},
	"homepage": "https://stupidneko.com",
	"pnpm": {
		"overrides": {
			"metro": "^0.81.0",
			"metro-config": "^0.81.0",
			"metro-core": "^0.81.0",
			"metro-resolver": "^0.81.0"
		},
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"@clerk/shared"
		]
	}
}

{
	"name": "stupid-neko",
	"description": "stupid-neko â€” Japanese learning and progress tracking app",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.15.0",
	"scripts": {
		"dev": "turbo run dev",
		"auth:keys": "node ./scripts/generate-auth-keys.mjs",
		"dev:all": "turbo run dev --filter=...",
		"dev:web": "turbo run dev --filter=web",
		"dev:mobile": "turbo run dev --filter=mobile",
		"dev:backend": "convex dev",
		"predev": "node scripts/check-pnpm.js",
		"predev:web": "node scripts/check-pnpm.js",
		"predev:backend": "node scripts/check-pnpm.js",
		"predev:mobile": "node scripts/check-pnpm.js",
		"build": "turbo run build",
		"prebuild": "node scripts/check-pnpm.js",
		"start": "turbo run start",
		"prestart": "node scripts/check-pnpm.js",
		"lint": "turbo run lint",
		"format": "biome format --write .",
		"biome:check": "biome check .",
		"biome:fix": "biome check --write .",
		"biome:format": "biome format .",
		"biome:ci": "biome check --reporter=summary .",
		"prelint": "node scripts/check-pnpm.js",
		"preinstall": "node -e \"if (!process.env.npm_execpath || !/pnpm/.test(process.env.npm_execpath)) { console.error('This repository uses pnpm. Please use pnpm to install and run scripts.'); process.exit(1); }\""
	},
	"dependencies": {
		"@auth/core": "^0.37.4",
		"@convex-dev/auth": "^0.0.88",
		"convex": "^1.26.2",
		"lucide-react": "^0.468.0",
		"react": "19.1.0",
		"react-dom": "19.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/node": "^20.19.11",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"npm-run-all": "^4.1.5",
		"turbo": "^2.5.6",
		"typescript": "catalog:"
	},
	"homepage": "https://stupidneko.com",
	"pnpm": {
		"overrides": {
			"metro": "^0.81.0",
			"metro-config": "^0.81.0",
			"metro-core": "^0.81.0",
			"metro-resolver": "^0.81.0"
		},
		"onlyBuiltDependencies": [
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"@clerk/shared"
		]
	}
}
